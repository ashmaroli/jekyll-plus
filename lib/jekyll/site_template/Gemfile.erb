source "https://rubygems.org"
ruby "<%= RUBY_VERSION %>"

# JekyllPlus runs on top of Jekyll 3.4.0 and above
gem "jekyll", "~> 3.4"

# The theme-gem for your site.
gem <%= @theme.inspect %><% if @theme == "minima" %>, "~> 2.0"
<% elsif @theme == "test-theme" %>, path: File.expand_path("../../../test/fixtures/test-theme", File.dirname(__FILE__))
<% end %>

# If you want to use GitHub Pages, remove the "gem "jekyll"" above and uncomment the line below.
# To upgrade, run `bundle update github-pages`.
# gem "github-pages", group: :jekyll_plugins

# If you have any plugins, put them here!
group :jekyll_plugins do
<% if @theme == "minima" %>
  gem "jekyll-feed", "~> 0.8"
<% end %>

  # Required to use the jekyll+ executable to build / serve your site.
  # Also includes the `jekyll-data` plugin. So you needn't include it again separately.
  gem "jekyll-plus", "~> 0.2"
end
